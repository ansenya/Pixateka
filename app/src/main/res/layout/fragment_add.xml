<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/may_add_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Тут можно загрузить свою фоточку"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="gone"
        tools:text="Фото выбрано"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ru.senya.pixateka.view.InputField
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            app:title="Название" />

        <ru.senya.pixateka.view.InputField
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            app:title="Категория" />

        <ru.senya.pixateka.view.InputField
            android:id="@+id/tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            app:title="Тэги" />
        <!--            <androidx.appcompat.widget.SearchView-->
        <!--                android:id="@+id/input"-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="35dp"-->
        <!--                android:background="@drawable/rectangle_1"-->
        <!--                android:inputType="text"-->
        <!--                android:queryHint="Поищем-ка"-->
        <!--                android:paddingLeft="10dp"-->
        <!--                app:iconifiedByDefault="true"-->
        <!--                android:textColor="@color/black"-->
        <!--                android:textSize="16sp" />-->

    </LinearLayout>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/selected_photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        app:riv_corner_radius="1dp"
        tools:src="@drawable/a1" />


    <Button
        android:id="@+id/button_select_photo"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginBottom="3dp"
        android:backgroundTint="@color/button"
        android:text="Нажать кнопку"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button2"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginBottom="3dp"
        android:backgroundTint="@color/button"
        android:text="Загрузить фото"
        android:textColor="@color/white"
        android:visibility="gone" />

</LinearLayout>