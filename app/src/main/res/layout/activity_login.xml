<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <Toolbar
        android:id="@+id/mainToolbar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/toolbar_color"
        android:title="Авторизация"
        android:titleTextColor="@color/text_color2"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">


                <ru.senya.pixateka.view.InputField
                    android:id="@+id/input_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:inputType="textEmailAddress"
                    app:hint="Ваш логин"
                    app:hint_color="@color/hint_color"
                    app:src="@drawable/avatar"
                    app:title="Логин" />

                <ru.senya.pixateka.view.InputField
                    android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    app:hint="Ваш пароль"
                    app:hint_color="@color/hint_color"
                    app:src="@drawable/password_icon"
                    app:title="Пароль" />

                <Button
                    android:id="@+id/button_enter"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/button"
                    android:text="Войти"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/button_registration"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/button"
                    android:text="Регистрация"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/wrong_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Что-то неверно!"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_circular"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/linear_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:visibility="gone" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>