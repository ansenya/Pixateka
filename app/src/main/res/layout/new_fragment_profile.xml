<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape3"
            app:title="Профиль"
            app:titleTextColor="@color/white">

            <Button
                android:id="@+id/button_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginEnd="13dp"
                android:background="#00FFFFFF"
                android:text="Выйти"
                android:textColor="@color/white" />
        </androidx.appcompat.widget.Toolbar>

<!--        <ru.senya.pixateka.view.viewFullscreen-->
<!--            android:id="@+id/fragment"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_below="@+id/toolbar"-->
<!--            android:visibility="gone" />-->

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/fragment_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/relative_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:id="@+id/relative"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:id="@+id/backround_frame"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/back"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:background="@color/back" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/shape" />
                        </FrameLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="156dp"
                            android:layout_height="156dp"
                            android:layout_alignBottom="@+id/backround_frame"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="20dp"
                            android:elevation="12dp"
                            app:cardCornerRadius="80dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@color/white" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/pfp_frame"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginBottom="23dp"
                            android:layout_alignBottom="@+id/backround_frame"
                            android:layout_centerHorizontal="true"
                            android:elevation="12dp"
                            app:cardCornerRadius="80dp">

                            <ImageView
                                android:id="@+id/pfp_img"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/pfp" />


                        </androidx.cardview.widget.CardView>


                        <LinearLayout
                            android:layout_marginTop="-10dp"
                            android:id="@+id/bio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/pfp_frame"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:text="Name Surname"
                                android:textAlignment="center"
                                android:textColor="@color/text_color"
                                android:textSize="30sp" />

                            <TextView
                                android:id="@+id/about"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="1dp"
                                android:layout_marginHorizontal="5000dp"
                                android:layout_marginTop="10dp"
                                android:text="Пользователь еще не заполнил описание"
                                android:textAlignment="center"
                                android:textColor="@color/text_color"
                                android:textSize="18sp" />

                            <Button
                                android:id="@+id/button_edit_profile"
                                android:layout_width="220dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_marginVertical="10dp"
                                android:autoSizeTextType="uniform"
                                android:backgroundTint="@color/button"
                                android:text="Редактировать профиль"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/bio"
                            android:textAlignment="center"
                            android:text="Тут ничего нет"
                            android:textColor="@color/text_color"
                            android:textSize="20sp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:background="@color/white"
                            android:id="@+id/recycler_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/bio"
                            android:layout_margin="1dp"
                            android:layout_marginTop="3dp" />


                    </RelativeLayout>
                </RelativeLayout>


            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>


</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>